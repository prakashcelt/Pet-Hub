								"{{base_url}}"
							],
							"path": [
								"api",
								"bookings"
							],
							"query": [
								{
									"key": "customer_id",
									"value": "1",
									"description": "Customer ID to fetch bookings for"
								}
							]
						},
						"description": "Get all bookings for a specific customer"
					},
					"response": []
				}
			],
			"description": "Booking management endpoints"
